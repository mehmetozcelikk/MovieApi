    <link rel="stylesheet" href="~/css/site.css">
        <link rel="stylesheet" href="~/css/SearchPage.css">

</head>
<body>
    @Html.Partial("_PartialMovie", Model)





   	 <div class="main-search-input-wrap">
       
     
    <div class="main-search-input fl-wrap">
        <div class="main-search-input-item">
                 <form method="get" action="/Movie/SaveKeywordCookie">
                      <input name="query"  value="" required>
                       <button>Search</button>
                 </form>
           </div>
                                        
     </div>
      @foreach (var item in @ViewBag.savedsearch)  
    {
    <form method="get" action="/Movie/SaveKeywordCookie">
    <input name="query" hidden value="@item">
    <button class="btn btn-link" style="background-color:black;color:white;width:100%;">@item</button>
    </form>

    }                                   

     </div>

</body>
</html>

